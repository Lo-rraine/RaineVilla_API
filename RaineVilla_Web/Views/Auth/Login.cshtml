@model RaineVilla_Web.Models.Dto.LoginRequestDTO


<form method="post" class="mx-auto mt-5 border rounded border-active p-3" style="width: 400px;">
    <h3>
        <small class="text-muted">Login</small>
    </h3>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4">Username</label>
        <input asp-for="UserName" type="text" placeholder="" class="form-control" />
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="" />
    </div>


    <div class="d-grid mt-4">
       
        <button class="btn btn-primary" type="submit" value="Submit">Login</button>
    </div>


</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}